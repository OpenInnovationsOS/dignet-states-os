### ğŸ“„ `ds-bot.js`
```javascript
// ds-bot.js
// A simple Discord bot for your Digital State
// âœ… No external dependencies â€” runs in Replit (free) or local Node.js
// Setup: https://discord.com/developers â†’ create app â†’ bot â†’ copy token

const { Client, GatewayIntentBits, Collection } = require('discord.js');
const client = new Client({
  intents: [
    GatewayIntentBits.Guilds,
    GatewayIntentBits.GuildMessages,
    GatewayIntentBits.MessageContent
  ]
});

// ğŸ—ƒï¸ Mock citizen database (in real use: connect to SovereignID)
const citizens = new Collection();

client.once('ready', () => {
  console.log(`âœ… ${client.user.tag} is online in Digital State!`);
  console.log(`ğŸ”— Invite: https://discord.com/api/oauth2/authorize?client_id=${client.user.id}&permissions=277025926208&scope=bot`);
});

// ğŸ§¾ Commands
client.on('interactionCreate', async interaction => {
  if (!interaction.isChatInputCommand()) return;

  const { commandName } = interaction;

  if (commandName === 'register') {
    const name = interaction.options.getString('name') || 'Anonymous';
    citizens.set(interaction.user.id, { 
      id: interaction.user.id, 
      name, 
      status: 'resident',
      joined: new Date()
    });
    await interaction.reply(`ğŸ›ï¸ Welcome, **${name}**! You are now a **Resident** of our Digital State.\n\nâ¡ï¸ Next: Use \`/passport\` to get your digital ID.`);
  }

  else if (commandName === 'passport') {
    const citizen = citizens.get(interaction.user.id);
    if (!citizen) {
      return interaction.reply('âš ï¸ Please `/register` first.');
    }
    const passport = `
**Digital Passport** ğŸ›‚  
Name: ${citizen.name}  
Status: ${citizen.status}  
ID: \`did:dnet:local:${citizen.id.slice(0,8)}\`  
Joined: ${citizen.joined.toDateString()}
    `.trim();
    await interaction.reply({ content: passport, ephemeral: true }); // Only visible to user
  }

  else if (commandName === 'vote') {
    const proposal = interaction.options.getInteger('proposal');
    const choice = interaction.options.getString('choice');
    await interaction.reply(`ğŸ—³ï¸ Vote recorded: **Proposal #${proposal}** â†’ **${choice}**\n\nâœ… Your voice shapes our laws.`);
  }

  else if (commandName === 'status') {
    await interaction.reply('ğŸŸ¢ **State Node Status**\n\n- Blockchain: âœ… Synced\n- Law Engine: âœ… Running\n- Treasury: 10,000 DSTB\n- Citizens: ' + citizens.size);
  }
});

// ğŸ“œ Register commands (run once â€” or use deploy-commands.js)
client.application.commands.set([
  {
    name: 'register',
    description: 'Register as a Resident of the Digital State',
    options: [
      {
        name: 'name',
        type: 3, // STRING
        description: 'Your preferred name',
        required: true
      }
    ]
  },
  {
    name: 'passport',
    description: 'Get your digital passport (private)'
  },
  {
    name: 'vote',
    description: 'Vote on a proposal',
    options: [
      {
        name: 'proposal',
        type: 4, // INTEGER
        description: 'Proposal ID (e.g., 1)',
        required: true
      },
      {
        name: 'choice',
        type: 3,
        description: 'Your vote: yes / no / abstain',
        required: true,
        choices: [
          { name: 'âœ… Yes', value: 'yes' },
          { name: 'âŒ No', value: 'no' },
          { name: 'âšª Abstain', value: 'abstain' }
        ]
      }
    ]
  },
  {
    name: 'status',
    description: 'Check state node health'
  }
]);

// ğŸ”‘ Paste your bot token here (get from Discord Dev Portal)
const TOKEN = 'YOUR_BOT_TOKEN_HERE'; // â† Replace this!
client.login(TOKEN);
